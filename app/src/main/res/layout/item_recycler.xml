<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:textAlignment="center"
    android:layout_marginTop="20dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvModel"
        android:layout_width="150dp"
        android:layout_height="210dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_background"
            android:contentDescription="@string/model"
            android:scaleType="fitEnd"
            android:src="@drawable/model__1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/ic_heart" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvNameOfOutfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/spf_pro_medium"
        android:gravity="center_horizontal"
        android:textColor="@color/grey"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/cvModel"
        app:layout_constraintTop_toBottomOf="@+id/cvModel"
        tools:text="Belt suit Blazer" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/spf_pro_medium"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvNameOfOutfit"
        app:layout_constraintTop_toBottomOf="@+id/tvNameOfOutfit"
        tools:text="$120" />


</androidx.constraintlayout.widget.ConstraintLayout>